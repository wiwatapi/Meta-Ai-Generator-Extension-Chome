{
  "manifest_version": 3,
  "name": "Meta AI Image Generator",
  "version": "1.1.0",
  "description": "Automate image generation on Meta AI with batch prompts and queue management",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "https://www.meta.ai/*",
    "https://meta.ai/*",
    "https://*.fbcdn.net/*",
    "https://*.xx.fbcdn.net/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.meta.ai/*",
        "https://meta.ai/*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  }
}